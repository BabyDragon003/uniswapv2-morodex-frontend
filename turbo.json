{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "build:list": {
      "outputs": ["list/**"]
    },
    "integration-test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "postinstall": {
      "inputs": ["src/config/abi/**"],
      "outputs": ["src/config/abi/types/**"]
    }
  }
}
